{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "declarationDir": "build",
    "lib": ["es6", "DOM", "es2016", "es2017"],
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": false,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
